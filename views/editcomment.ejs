<%- include("./partials/header") %>
<div class="content">
    <div class="post_box" style="text-align: center;">
        <h4>Edit Comment</h4>
    </div>
    <div class="post_box">
        <% thatcomment.forEach(function(el){ %>
        <form action="/dinsor/<%= el.post_id %>/comment/<%= el._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <h5>Edit comment here.</h5><br>
                <input type="text" name="thatcomment[comment]" class="form-control" value="<%= el.comment %>">
            </div>
            <button class="btn btn-warning" type="submit">Save</button>
        </form>
        <% }); %>
    </div>
<%- include("./partials/footer") %>