<%- include("./partials/header") %>
<div class="content">
    <div class="post_box" style="text-align: center;">
        <h4>Welcome to CSS224 group</h4>
    </div>
    <div class="post_box">
        <form action="/dinsor/CSS_224" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <h5>Create new post here.</h5><br>
                <div class="grid_5-95"> 
                    <p>title :</p>
                    <input type="text" name="text" class="form-control" placeholder="write something...">
                </div>
                <div class="grid_5-95"> 
                    <p>file  : </p>
                    <p class="time">*(only image, word & pdf)</p>
                </div>
                <div class="grid_5-95"> 
                    <p></p>
                    <input type="file" name="file">
                </div>
               
            </div>
            <button class="btn btn-warning" type="submit">Post</button>
        </form>
    </div>
    <% css224DB.forEach(function(css224DB){ %>
        <div class="post_box">
            <div class="headpost_grid">
                <p class="headpostfont">Post by : <%= css224DB.owner_id.username %></p>
                <form action="/Index" method="POST" >
                    <i type="button" class="dropdown-toggle-split fas fa-book" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                        <div class="dropdown-menu">
                            
                        </div>
                </form>
            </div>
            <p class="time">Create date: <%= moment(css224DB.create_date).format("DD/MM/YYYY") %></p>
            <hr>
            <p><%= css224DB.title %></p>
            <% if(css224DB.content == "none"){ %>
                
            <% }else{ %>
                <a target="_blank" href=<%= '../uploads/'+ css224DB.content %>><img  alt="<%= css224DB.content %>" src=<%= '../uploads/'+ css224DB.content %>></a>
            <% } %>
            <hr>
            <a href="/dinsor/<%= css224DB._id %>" class="btn btn-warning">More detail</a>
        </div>
    <% }); %>
</div>
<%- include("./partials/footer") %>