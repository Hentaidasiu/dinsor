<%- include("./partials/header") %>
<div class="content">
    <div class="post_box" style="text-align: center; font-size: 2vw;">
        <a>Welcome to CSS228 group</a>
    </div>
    <div class="post_box">
        <form action="/dinsor/CSS_228" method="POST">
            <div class="form-group">
                <h5>Create new post here.</h5><br>
                <input type="text" name="text" class="form-control">
            </div>
            <button class="btn btn-warning" type="submit">Post</button>
        </form>
    </div>
    <% css228DB.reverse().forEach(function(css228DB){ %>
        <div class="post_box">
            <p>Post by : <%= css228DB.p_username %></p><br>
            <p><%= css228DB.title %></p>
            <img src=<%= css228DB.image %>>
        </div>
    <% }); %>
</div>
<%- include("./partials/footer") %>