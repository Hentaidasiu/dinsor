    <body style="background-image: url('/image/wep-bg1.jpg'); background-size: cover;">
        <center>
        <div class='content' style="width: 70%; " >
            <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
            <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
        </div>
        </center>

        <div class="login_Rigis_box">
            
                <h1 style="text-align:center">Login</h1>
            
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1"><strong>Username</strong></label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1"><strong>Password</strong></label>
                    <input type="password" name="password" class="form-control">
                </div>
                <div class="grid_50-50">
                    <div  style="text-align-last:left;">
                        <a class="A_btm" style="text-decoration: none;" href="/register">Register</a>
                    </div>
                    <div  style="text-align-last: right;">
                        <button class="btn btn-warning" type="submit" >Login</button><br>
                    </div>
                </div>
                
            </form>
        </div>
    </body>
</html>