<%- include("./partials/header") %>
<div class="content">
    <div class="post_box" style="text-align: center;">
        <h4>Edit Post</h4>
    </div>
    <div class="post_box">
        <% thatpost.forEach(function(el){ %>
        <form action="/dinsor/<%= el._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <h5>Edit post here.</h5><br>
                <div class="grid_5-95"> 
                    <p>title :</p>
                    <input type="text" name="title" class="form-control" value="<%= el.title %>">
                </div>
                <div class="grid_5-95"> 
                    <p>file  : </p>
                    <p class="time">*(only image, word & pdf)</p>
                </div>
                <div class="grid_5-95"> 
                    <p></p>
                    <input type="file" name="file">
                </div>   
            </div>
            <button class="btn btn-warning" type="submit">Save</button>
        </form>
        <% }); %>
    </div>

<%- include("./partials/footer") %>