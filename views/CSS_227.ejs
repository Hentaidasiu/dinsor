<%- include("./partials/header") %>
<div class="content">
    <div class="post_box" style="text-align: center;">
        <h4>Welcome to CSS227 group</h4>
    </div>
    <div class="post_box">
        <form action="/dinsor/CSS_227" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <h5>Create new post here.</h5><br>
                <input type="text" name="text" class="form-control">
                <input type="file" name="file">
            </div>
            <button class="btn btn-warning" type="submit">Post</button>
        </form>
    </div>
    <% css227DB.forEach(function(css227DB){ %>
        <div class="post_box">
            <p class="headpostfont">Post by : <%= css227DB.owner_id.username %></p>
            <p>Create date: <%= moment(css227DB.create_date).format("DD/MM/YYYY") %></p>
            <p><%= css227DB.title %></p>
            <% if(css227DB.content == "none"){ %>
                
            <% }else{ %>
                <a href=<%= '../uploads/'+ css227DB.content %>><img  alt="<%= css227DB.content %>" src=<%= '../uploads/'+ css227DB.content %>></a>
            <% } %>
            <hr>
            <a href="/dinsor/<%= css227DB._id %>" class="btn btn-warning">More detail</a>
        </div>
    <% }); %>
</div>
<%- include("./partials/footer") %>